{
    "name": "dcmjs",
    "version": "0.30.0",
    "description": "Javascript implementation of DICOM manipulation",
    "main": "build/dcmjs.js",
    "module": "build/dcmjs.es.js",
    "directories": {
        "example": "examples"
    },
    "scripts": {
        "test": "vitest",
        "build": "tsdown",
        "dev": "tsdown -w",
        "build:examples": "npm run build && npx cpx 'build/**/*.{js,map}' examples/js",
        "format": "biome format --fix",
        "format:check": "biome ci",
        "typecheck": "tsc --noEmit",
        "lint": "biome lint --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dcmjs-org/dcmjs.git"
    },
    "author": "Steve Pieper",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/dcmjs-org/dcmjs/issues"
    },
    "homepage": "https://github.com/dcmjs-org/dcmjs#readme",
    "devDependencies": {
        "@biomejs/biome": "^2.3.8",
        "@types/node": "^24.10.1",
        "@types/pako": "^2.0.4",
        "follow-redirects": "^1.15.11",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "lint-staged": "^16.2.7",
        "tsdown": "^0.17.0-beta.4",
        "typescript": "^5.9.3",
        "vitest": "^4.0.14",
        "xml2js": "^0.6.2"
    },
    "dependencies": {
        "adm-zip": "^0.5.16",
        "gl-matrix": "^3.4.4",
        "lodash.clonedeep": "^4.5.0",
        "loglevel": "^1.9.2",
        "ndarray": "^1.0.19",
        "pako": "^2.1.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,json,css}": [
            "biome format --fix",
            "git add"
        ]
    },
    "jest": {
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.js"
        ]
    }
}
